<?xml version="1.0" encoding="utf-8"?>
<skin>
    <information>
        <name>Tistory Berry Skin ${{version}}</name>
        <version>${{version}}</version>
        <description>
            <![CDATA[${{description}}]]>
        </description>
        <license>
            <![CDATA[${{license}}]]>
        </license>
    </information>
    <author>
        <name><![CDATA[${{author}}]]></name>
        <homepage>${{homepage}}</homepage>
        <email>${{email}}</email>
    </author>
    <default>
        <recentEntries>5</recentEntries>
        <recentComments>5</recentComments>
        <recentTrackbacks>5</recentTrackbacks>
        <itemsOnGuestbook>10</itemsOnGuestbook>
        <tagsInCloud>30</tagsInCloud>
        <sortInCloud>3</sortInCloud>
        <expandComment>0</expandComment>
        <expandTrackback>0</expandTrackback>
        <lengthOfRecentNotice>25</lengthOfRecentNotice>
        <lengthOfRecentEntry>27</lengthOfRecentEntry>
        <lengthOfRecentComment>30</lengthOfRecentComment>
        <lengthOfRecentTrackback>30</lengthOfRecentTrackback>
        <lengthOfLink>30</lengthOfLink>
        <showListOnCategory>1</showListOnCategory>
        <showListOnArchive>1</showListOnArchive>
        <commentMessage>
            <none>댓글이 없습니다.</none>
            <single>댓글 &lt;span class="cnt"&gt;하나&lt;/span&gt; 달렸습니다.</single>
        </commentMessage>
        <trackbackMessage>
            <none>받은 트랙백이 없고</none>
            <single>트랙백이 &lt;span class="cnt"&gt;하나&lt;/span&gt;이고</single>
        </trackbackMessage>
        <tree>
            <color>000000</color>
            <bgColor>ffffff</bgColor>
            <activeColor>000000</activeColor>
            <activeBgColor>eeeeee</activeBgColor>
            <labelLength>27</labelLength>
            <showValue>1</showValue>
        </tree>
        <contentWidth>500</contentWidth>
    </default>
    <!-- Legacy -->
    <liststyle>
        <item>
            <label>기본 타입</label>
            <value>thumbnail</value>
        </item>
    </liststyle>
    <!-- Cover -->
    <cover>
        <item>
            <name>thumbnail</name>
            <label>
                <![CDATA[ 기본 타입 ]]>
            </label>
            <description>
                <![CDATA[ 이미지 썸네일과 제목, 본문으로 구성된 리스트 ]]>
            </description>
        </item>
    </cover>
    <!-- Variable -->
    <variables>
        <!-- Profile -->
        <variablegroup name="프로필 설정">
            <variable>
                <name>profile-image-visible</name>
                <label>
                    <![CDATA[ 블로그 사진 보이기/숨기기 ]]>
                </label>
                <type>BOOL</type>
                <option />
                <default>true</default>
                <description>
                    <![CDATA[ 블로그의 사진을 보이게 하거나 숨깁니다. ]]>
                </description>
            </variable>
            <variable>
                <name>profile-blogger-visible</name>
                <label>
                    <![CDATA[ 블로거명 보이기/숨기기 ]]>
                </label>
                <type>BOOL</type>
                <option />
                <default>true</default>
                <description>
                    <![CDATA[ 블로거의 이름을 보이게 하거나 숨깁니다. ]]>
                </description>
            </variable>
            <variable>
                <name>profile-blog-desc-visible</name>
                <label>
                    <![CDATA[ 블로그 설명 보이기/숨기기 ]]>
                </label>
                <type>BOOL</type>
                <option />
                <default>true</default>
                <description>
                    <![CDATA[ 블로그의 설명을 보이게 하거나 숨깁니다. ]]>
                </description>
            </variable>
        </variablegroup>
        <!-- Board -->
        <variablegroup name="본문">
            <variable>
                <name>board_thumbnail_figure</name>
                <label>글 썸네일 모양</label>
                <description></description>
                <type>SELECT</type>
                <option>
                    <![CDATA[
                        [
                        {"name":"article__idx-img-default", "label":"기본", "value":"article__idx-img-default"},
                        {"name":"article__idx-img-rect", "label":"사각형", "value":"article__idx-img-rect"},
                        {"name":"article__idx-img-circle", "label":"원형", "value":"article__idx-img-circle"}
                        ]
                    ]]>
                </option>
                <default>article__idx-img-default</default>
            </variable>
        </variablegroup>
        <!-- Footer Link -->
        <variablegroup name="Footer 링크 설정">
            <variable>
                <name>footer_sns_facebook_link</name>
                <label>
                    <![CDATA[ Facebook Link ]]>
                </label>
                <description>
                    <![CDATA[ Footer에 위치한 Facebook SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option></option>
                <default></default>
            </variable>
            <variable>
                <name>footer_sns_twitter_link</name>
                <label>
                    <![CDATA[ Twitter Link ]]>
                </label>
                <description>
                    <![CDATA[ Footer에 위치한 Twitter SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option></option>
                <default></default>
            </variable>
            <variable>
                <name>footer_sns_youtube_link</name>
                <label>
                    <![CDATA[ Youtube Link ]]>
                </label>
                <description>
                    <![CDATA[ Footer에 위치한 Youtube SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option></option>
                <default></default>
            </variable>
            <variable>
                <name>footer_sns_github_link</name>
                <label>
                    <![CDATA[ Github Link ]]>
                </label>
                <description>
                    <![CDATA[ Footer에 위치한 Github SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option></option>
                <default></default>
            </variable>
            <variable>
                <name>footer_about_link</name>
                <label>
                    <![CDATA[ About Link ]]>
                </label>
                <description>
                    <![CDATA[ Footer에 위치한 About 링크 ]]>
                </description>
                <type>STRING</type>
                <option></option>
                <default></default>
            </variable>
            <variable>
                <name>footer_careers_link</name>
                <label>
                    <![CDATA[ Careers Link ]]>
                </label>
                <description>
                    <![CDATA[ Footer에 위치한 Careers 링크 ]]>
                </description>
                <type>STRING</type>
                <option></option>
                <default></default>
            </variable>
            <variable>
                <name>footer_contact_link</name>
                <label>
                    <![CDATA[ Contact Link ]]>
                </label>
                <description>
                    <![CDATA[ Footer에 위치한 Contact 링크 ]]>
                </description>
                <type>STRING</type>
                <option></option>
                <default></default>
            </variable>
        </variablegroup>
    </variables>
</skin>